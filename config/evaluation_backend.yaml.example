# 评估者模型后端配置文件
# 用于配置模型评估相关的后端设置

# 默认评估配置
default:
  timeout: 60
  max_retries: 3
  temperature: 0.1  # 评估模型使用较低温度以保证一致性
  max_tokens: 4000

# OpenAI 评估模型配置
openai:
  model_name: "gpt-4o"  # 推荐使用GPT-4进行评估
  api_key: ""  # 从环境变量OPENAI_API_KEY读取
  api_base: ""
  timeout: 60
  max_retries: 3
  temperature: 0.1
  max_tokens: 2000
  system_prompt: "你是一个专业的教学评估专家，请根据给定的标准严格评估教学内容。"

# Ollama 评估模型配置
ollama:
  model_name: "qwen2.5:14b"  # 评估用的Qwen模型
  api_base: "http://localhost:11434"
  timeout: 120
  max_retries: 3
  temperature: 0.1
  max_tokens: 2000
  system_prompt: "你是一个专业的教学评估专家，请根据给定的标准严格评估教学内容。"

# DeepSeek 评估配置
deepseek:
  model_name: "deepseek-chat"
  api_key: ""  # 从环境变量DEEPSEEK_API_KEY读取
  api_base: "https://api.deepseek.com/v1"
  timeout: 60
  max_retries: 3
  temperature: 0.1
  max_tokens: 2000
  system_prompt: "你是一个专业的教学评估专家，请根据给定的标准严格评估教学内容。"

